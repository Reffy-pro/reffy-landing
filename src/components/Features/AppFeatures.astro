---
import Icon from "astro-icon";
import clsx from "clsx";
import features from "./app-features.data.json";
---

<div class="relative overflow-hidden bg-white pt-16 pb-32">
  <div class="space-y-24">
    {
      features &&
        features.length &&
        features.map((feat, idx) => {
          const isOdd = idx % 2 === 1;

          return (
            <div class="lg:mx-auto lg:grid lg:max-w-7xl lg:grid-flow-col-dense lg:grid-cols-2 lg:gap-24 lg:px-8">
              <div
                class={clsx("mx-auto max-w-xl px-6 lg:mx-0 lg:max-w-none lg:py-16 lg:px-0", {
                  "lg:col-start-2": isOdd,
                })}
              >
                <div>
                  {feat.icon && (
                    <div>
                      <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-blue-600">
                        <Icon class="h-8 w-8 text-white" name={feat.icon} aria-hidden="true" />
                      </span>
                    </div>
                  )}
                  <div class="mt-6">
                    {feat.title && <h2 class="text-3xl font-bold tracking-tight text-slate-900">{feat.title}</h2>}
                    {feat.description && <p class="mt-4 text-lg text-slate-500">{feat.description}</p>}
                    {feat.cta && (
                      <div class="mt-6">
                        <a
                          href={feat.cta.href}
                          class="inline-flex rounded-lg bg-blue-600 px-4 py-1.5 text-base font-semibold leading-7 text-white shadow-sm ring-1 ring-blue-600 hover:bg-blue-700 hover:ring-blue-700"
                        >
                          {feat.cta.name}
                        </a>
                      </div>
                    )}
                  </div>
                </div>
                {feat.review && (
                  <div class="mt-8 pt-6 border-t border-slate-200">
                    <blockquote>
                      <div>
                        <p class="text-base text-slate-500">&ldquo;{feat.review.blockquote}&rdquo;</p>
                      </div>
                      <footer class="mt-3">
                        <div class="flex items-center space-x-3">
                          <div class="flex-shrink-0">
                            <img
                              class="h-6 w-6 rounded-full"
                              src={feat.review.author.picture}
                              alt={feat.review.author.name}
                            />
                          </div>
                          <div class="text-base font-medium text-slate-700">
                            {feat.review.author.name}, {feat.review.author.jobTitle}
                          </div>
                        </div>
                      </footer>
                    </blockquote>
                  </div>
                )}
              </div>
              <div class={clsx("mt-12 sm:mt-16 lg:mt-0", { "lg:col-start-1": isOdd })}>
                <div
                  class={clsx(
                    "lg:relative lg:m-0 lg:h-full lg:px-0",
                    isOdd ? "-ml-48 pr-4 sm:pr-6 md:-ml-16" : "-mr-48 pl-4 sm:pl-6 md:-mr-16"
                  )}
                >
                  <img
                    class={clsx(
                      "w-full rounded-xl shadow-xl ring-1 ring-black ring-opacity-5 lg:absolute lg:h-full lg:w-auto lg:max-w-none",
                      isOdd ? "lg:right-0" : "lg:left-0"
                    )}
                    src={feat.picture.url}
                    alt={feat.picture.alt}
                  />
                </div>
              </div>
            </div>
          );
        })
    }
  </div>
</div>
