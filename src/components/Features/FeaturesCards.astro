---
import Icon from "astro-icon";
import data from "./features-cards.data.json";

const { name, title, description, features } = data;
---

<div class="relative bg-slate-100 py-24 sm:py-32 lg:py-40">
  <div class="mx-auto max-w-md px-6 text-center sm:max-w-3xl lg:max-w-7xl lg:px-8">
    {name && <h2 class="text-lg font-semibold text-blue-600">{name}</h2>}
    {title && <p class="mt-2 text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">{title}</p>}
    {description && <p class="mx-auto mt-5 max-w-prose text-xl text-slate-500">{description}</p>}

    <div class="mt-20">
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3">
        {
          features &&
            features.length &&
            features.map((feature) => (
              <div class="pt-6">
                <div class="flow-root rounded-lg bg-white px-6 pb-8">
                  <div class="-mt-6">
                    <div>
                      <span class="inline-flex items-center justify-center rounded-xl bg-blue-500 p-3 shadow-lg">
                        <Icon class="h-8 w-8 text-white" name={feature.icon} aria-hidden="true" />
                      </span>
                    </div>
                    <h3 class="mt-8 text-lg font-semibold leading-8 tracking-tight text-slate-900">{feature.name}</h3>
                    <p class="mt-5 text-base leading-7 text-slate-600">{feature.description}</p>
                  </div>
                </div>
              </div>
            ))
        }
      </div>
    </div>
  </div>
</div>
